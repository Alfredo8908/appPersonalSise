<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>pe.edu.sise.personal.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarPersonaServlet</servlet-name>
        <servlet-class>pe.edu.sise.personal.servlet.RegistrarPersonaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonaServlet</servlet-name>
        <servlet-class>pe.edu.sise.personal.servlet.PersonaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarPersonaServlet</servlet-name>
        <servlet-class>pe.edu.sise.personal.servlet.EditarPersonaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarPersonaServlet</servlet-name>
        <servlet-class>pe.edu.sise.personal.servlet.EliminarPersonaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarPersonaServlet</servlet-name>
        <url-pattern>/RegistrarPersonaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonaServlet</servlet-name>
        <url-pattern>/PersonaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarPersonaServlet</servlet-name>
        <url-pattern>/EditarPersonaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarPersonaServlet</servlet-name>
        <url-pattern>/EliminarPersonaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
